<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/Personal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <ImageButton
            android:id="@+id/img_1"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/set"
            android:visibility="gone">

        </ImageButton>
        <TextView
            android:id="@+id/tv_4"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/img_1"
            android:textSize="20sp"
            android:text="你的名字"
            android:layout_marginTop="10dp">

        </TextView>
        <TextView
            android:id="@+id/tv_5"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_1"
            android:layout_below="@+id/tv_4"
            android:textSize="15sp"
            android:text="性别">

        </TextView>
        <TextView
            android:id="@+id/tv_6"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_1"
            android:layout_below="@+id/tv_5"
            android:textSize="15sp"
            android:text="权限等级">

        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/evalution"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="5dp"
        android:layout_weight="7">
        <TextView
            android:id="@+id/tv_7"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="我的评价">

        </TextView>
        <Button
            android:id="@+id/bt_1"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:text="       评价管理"
            android:textSize="25dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/jiantou"
            android:layout_below="@+id/tv_7"
            android:layout_height="40dp">

        </Button>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/interpretation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="5dp"
        android:layout_weight="15">
        <TextView
            android:id="@+id/tv_8"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="我的讲解">

        </TextView>
        <Button
            android:id="@+id/bt_2"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:text="       投稿管理"
            android:textSize="25dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/jiantou"
            android:layout_below="@+id/tv_8"
            android:layout_height="40dp">

        </Button>
        <Button
            android:id="@+id/bt_3"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:text="       审核状态"
            android:textSize="25dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/jiantou"
            android:layout_below="@+id/bt_2"
            android:layout_height="40dp">

        </Button>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_weight="2">
        <Button
            android:id="@+id/Set"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="  设置"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/set"
            android:background="@color/white"
            android:drawableRight="@drawable/jiantou">

        </Button>
    </LinearLayout>
</LinearLayout>